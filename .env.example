# =============================================================================
# Spotify Web API
# https://developer.spotify.com/dashboard
# =============================================================================
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Redirect URI registered in your Spotify app (use http://localhost:8888/callback for local setup)
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback
# Refresh token obtained after the first OAuth authorization (see README)
SPOTIFY_REFRESH_TOKEN=

# =============================================================================
# YouTube Data API v3
# https://console.cloud.google.com/
# =============================================================================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
# Refresh token obtained after the first OAuth authorization (see README)
YOUTUBE_REFRESH_TOKEN=
# (Optional) Explicitly set which channel to upload to
YOUTUBE_CHANNEL_ID=

# =============================================================================
# OpenAI API — used for DALL·E thumbnail generation
# https://platform.openai.com/api-keys
# =============================================================================
OPENAI_API_KEY=

# =============================================================================
# Unsplash API — fallback image source if DALL·E fails
# https://unsplash.com/developers
# =============================================================================
UNSPLASH_ACCESS_KEY=

# =============================================================================
# Pipeline settings (optional — defaults shown)
# =============================================================================
# Local working directory for temporary files (created at runtime, gitignored)
WORK_DIR=./tmp
# Output directory for finished .mp4 files before upload
OUTPUT_DIR=./output
# YouTube video privacy: public | unlisted | private
YOUTUBE_PRIVACY_STATUS=unlisted
# Video resolution (width x height)
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
